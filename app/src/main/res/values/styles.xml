<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CharTextStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:background">@drawable/background_name</item>
    </style>

    <style name="DetailsTextHeadingStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/colorTextRed</item>
        <item name="android:textSize">@dimen/details_heading_size</item>
        <item name="android:layout_marginStart">@dimen/details_padding_start</item>
    </style>

    <style name="DetailsTextSubHeadingStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/colorTextWight</item>
        <item name="android:textSize">@dimen/details_sub_heading_size</item>
        <item name="android:layout_marginStart">@dimen/details_padding_start</item>
    </style>

</resources>